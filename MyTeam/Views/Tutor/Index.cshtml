@model IEnumerable<MyTeam.Data.Team>

@{
    ViewBag.Title = "Tutor";
}

<div class="container body-content">
    <div class="row">
        <h1>Tutor</h1>
    </div>

    <div class="row">
        <h4>Hi @User.Identity.Name</h4>
    </div>

    <div class="row">
        <h4>Teams</h4>
        <a class="pull-right new-item" href="@Url.Action("Create", "Team")">New Team<span class="glyphicon glyphicon-plus" aria-hidden="true"></span></a>
    </div>

    <div class="row">
        <p>Select a team below to view it's members.</p>
    </div>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                Actions
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(item.Name, "Members", new { id = item.Id, controller = "Team" })
                </td>
                <td>
                    <a href="@Url.Action("Edit", new { id = item.Id, controller = "Team" })"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                    <a href="@Url.Action("Delete", new { id = item.Id, controller = "Team" })"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a>
                    @Html.ActionLink("Add Member", "AddMember", new { id = item.Id, controller = "Team" })
                </td>
            </tr>
        }

    </table>
</div>
