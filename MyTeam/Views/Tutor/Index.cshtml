@model IEnumerable<MyTeam.Data.Team>

@{
    ViewBag.Title = "Tutor Dashboard";
}

<div class="container body-content">

    <div class="row">
        <h1 class="text-center">@ViewBag.Title</h1>
    </div>

    <div class="row">
        <h4 class="pull-left">Tutor Dashboard</h4>
        <a class="pull-right new-item" href="@Url.Action("Create", "Team")">New Team<span class="glyphicon glyphicon-plus" aria-hidden="true"></span></a>
    </div>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                Member Actions
            </th>
            <th>
                Team Actions
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a href="@Url.Action("Projects", new { id = item.Id, controller = "Tutor" })" data-toggle="tooltip" data-placement="right" title="View team's projects">@item.Name</a>
                </td>
                <td>
                    <a href="@Url.Action("Members", new { id = item.Id, controller = "Team" })" data-toggle="tooltip" data-placement="left" title="View team members here"><span class="glyphicon glyphicon-user" aria-hidden="true"></span>View Members</a>
                    <a href="@Url.Action("AddMember", new { id = item.Id, controller = "Team" })" data-toggle="tooltip" data-placement="right" title="Add new team member here"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span>Add Member</a>
                </td>
                <td>
                    <a href="@Url.Action("Edit", new { id = item.Id, controller = "Team" })"><span class="glyphicon glyphicon-pencil" aria-hidden="true" data-toggle="tooltip" data-placement="left" title="Edit"></span></a>
                    <a href="@Url.Action("Delete", new { id = item.Id, controller = "Team" })"><span class="glyphicon glyphicon-remove" aria-hidden="true" data-toggle="tooltip" data-placement="right" title="Delete"></span></a>
                </td>
            </tr>
        }

    </table>

</div>
