@model IEnumerable<MyTeam.Data.WorkTask>

@{
    ViewBag.Title = "Work Tasks";
}

<h2>Work Tasks</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PercentageCompleted)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EstimatedDuration)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Duration)
        </th>
        <th>
            Evaluations
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PercentageCompleted)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EstimatedDuration)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EndDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Duration)
        </td>
        <td>
            <a href="@Url.Action("getEvaluations", "WorkTask", new { worktask = item.PK_WorkTaskID })"><span class="glyphicon glyphicon-stats" aria-hidden="true"></span></a>
        </td>
        <td>
            @Html.ActionLink("Edit", "editWorkTask", new { id=item.PK_WorkTaskID }) |
            @Html.ActionLink("Details", "getWorkTask", new { id = item.PK_WorkTaskID }) |
            @Html.ActionLink("Delete", "deleteWorkTask", new { id = item.PK_WorkTaskID }) |
            @Html.ActionLink("Evaluate", "addEvaluation", new { FK_WorkTask = item.PK_WorkTaskID })
        </td>
    </tr>
}

</table>
