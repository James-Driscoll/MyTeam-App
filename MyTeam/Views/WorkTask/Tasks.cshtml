@model IEnumerable<MyTeam.Data.WorkTask>

@{
    ViewBag.Title = "Projects";
}

<div class="container body-content">
    <div class="row">
        <h1>Tasks</h1>

    </div>
    <div class="row">
        <h4>Hi User</h4>
    </div>

    <div class="row">
        <h4>@Html.ActionLink("Team", "getTeam", "Project") / @Html.ActionLink("Projects", "Projects", "Project") / Tasks</h4>
        <a class="pull-right new-item" href="@Url.Action("addWorkTask", "WorkTask")">New Task<span class="glyphicon glyphicon-plus" aria-hidden="true"></span></a>
    </div>

    <div class="row">
        <p>Select a task below to view it's evaluations.</p>
    </div>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4">
                <div class="task">
                    <div class="col-md-12">
                        <h3 class="text-center ta-title">@Html.DisplayFor(modelItem => item.Title)</h3>
                        <p class="text-center ta-description">@Html.DisplayFor(modelItem => item.Description)</p>
                    </div>

                    <div class="col-md-12">
                        <div class="ta-details">
                            <p>Date Started: <strong>@Html.DisplayFor(modelItem => item.StartDate)</strong></p>
                            <p>Date Finished: <strong>@Html.DisplayFor(modelItem => item.EndDate)</strong></p>
                            <p>Status: <strong>@Html.DisplayFor(modelItem => item.Status)</strong></p>
                            <p>Percentage Completed: <strong>@Html.DisplayFor(modelItem => item.PercentageCompleted)%</strong></p>
                            <p>Estimated Duration: <strong>@Html.DisplayFor(modelItem => item.EstimatedDuration) hours</strong></p>
                            <p>Duration: <strong>@Html.DisplayFor(modelItem => item.Duration)</strong></p>
                        </div>
                    </div>

                    <div class="col-md-12">
                        <div class="pr-actions">
                            <a class="" href="@Url.Action("editWorkTask", new { id = item.PK_WorkTaskID, controller = "WorkTask" })"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                            <a class="" href="@Url.Action("deleteWorkTask", new { id = item.PK_WorkTaskID, controller = "WorkTask" })"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a>
                        </div>
                    </div>

                    <div class="col-md-6 text-center">
                        <a href="@Url.Action("getEvaluations", "WorkTask", new { worktask = item.PK_WorkTaskID })" class=" btn btn-primary btn-tasks">Evaluations</a>
                    </div>
                    <div class="col-md-6 text-center">
                        <a href="@Url.Action("AddEvaluation", "WorkTask", new { FK_WorkTask = item.PK_WorkTaskID })" class=" btn btn-primary btn-tasks">Evaluate</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
