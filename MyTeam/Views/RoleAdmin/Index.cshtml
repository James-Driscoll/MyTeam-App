@{
    ViewBag.Title = "Roles";
}
<div class="container body-content">
    <div class="row">
        <h1>Roles</h1>
    </div>

    <div class="row">
        <h4>Hi @User.Identity.Name</h4>
    </div>

    <div class="row">
        <h4>@Html.ActionLink("Admin", "Index", "Admin") / Manage Roles</h4>
        <a class="pull-right new-item" href="@Url.Action("Create", "RoleAdmin")">New Role<span class="glyphicon glyphicon-plus" aria-hidden="true"></span></a>
    </div>

    <table class="table">
        <tr>
            <th>Role Name</th>
            <th>Role ID</th>
            <th></th>
        </tr>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Name</td>
                <td>@role.Id</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = @role.Id })"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span></a>
                    <a href="@Url.Action("Delete", new { id = @role.Id })"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a>
                </td>
            </tr>
        }
    </table>

</div>
