@model IEnumerable<MyTeam.Data.BEANS.TeamMemberBEAN>

@{
    ViewBag.Title = "Team Members";
}

<div class="container body-content">

    <div class="row">
        <h1 class="text-center">@ViewBag.Title</h1>
    </div>

    <div class="row">
        <h4 class="pull-left">Tutor Dashboard / Team Members</h4>
    </div>

    <table class="table">
        <tr>
            <th>
                Members
            </th>
            <th>
                Actions
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.userName)
                </td>
                <td>
                    @Html.ActionLink("Student Stats", "StudentStats", new { id = item.userID, controller = "Tutor" })
                </td>
            </tr>
        }

    </table>

    <div>
        @Html.ActionLink("Back to Tutor Dashboard", "Index", "Tutor")
    </div>

</div>
