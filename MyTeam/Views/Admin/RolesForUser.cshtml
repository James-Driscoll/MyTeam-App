@{
    ViewBag.Title = "Roles For User";
}

<div class="container body-content">
    <div class="row">
        <h1>Roles For User</h1>
    </div>

    <div class="row">
        <h4>Hi @User.Identity.Name</h4>
    </div>

    <div class="row">
        <h4>@Html.ActionLink("Admin", "Index", "Admin") / Roles For User</h4>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <p>
            User: @Html.DropDownList("userName", (IEnumerable<SelectListItem>)ViewBag.userList, "Select...")
            <input class="btn btn-primary" type="submit" value="Get Roles for this User" />
        </p>
    }

    <div>
        @Html.ActionLink("Back to Admin Control Panel", "Index")
    </div>
</div>
