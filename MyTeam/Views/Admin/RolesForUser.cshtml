@{
    ViewBag.Title = "Roles For User";
}

<div class="container body-content">

    <div class="row">
        <h1>@ViewBag.Title</h1>
    </div>

    <div class="row">
        <h4 class="pull-left">Admin Control Panel / Users / Roles For User</h4>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <p>
            User: @Html.DropDownList("userName", (IEnumerable<SelectListItem>)ViewBag.userList, "Select...", new { @class = "form-control" })
            <input class="btn btn-primary" type="submit" value="Get Roles for this User" />
        </p>
    }
    <div>
        @Html.ActionLink("Back to Admin Control Panel", "Index")
    </div>

</div>
